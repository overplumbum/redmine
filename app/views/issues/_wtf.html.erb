<div class="wtf">
<div class="btn-group-xs btn-group">
<% if @issue.safe_attribute?('status_id') && @allowed_statuses.present? %>
	<% @allowed_statuses.each do |t| %>
		<button type="button" class="btn btn-default btn-xs wtf-status-btn <% if @issue.status_id == t.id %>disabled<% end %>" data-id="<%= t.id %>"><%= t.name %></button>
	<% end %>
<% end %>
</div>
</div>